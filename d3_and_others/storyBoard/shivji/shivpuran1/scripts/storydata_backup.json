    buttonText: '7',
    title: 'Chapter SEVEN: Do\'s and Dont\'s ...',
        headerStyle: { 'color': 'purple','font-weight': '1900', 'background-color': 'skyblue', 'opacity':'0.5'},
        contentStyle: { 'border':'3px outset blue',
             'background-image': 'url("images/shiv1_7.jfif")',
