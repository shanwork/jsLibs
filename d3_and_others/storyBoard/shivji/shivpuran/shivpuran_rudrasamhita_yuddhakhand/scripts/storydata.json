title: 'YUDH-KHAND,KILLING  OF TRIPURASURS ',
headerStyle: { 'color': 'darkblue','font-weight': '1900', 'text-shadow': '3px 3px 2px white', 'background-color': 'gray', 'opacity':'1.0'},
contentStyle: { 'border':'3px outset blue',
