title: 'YUDH-KHAND,MANIFESTATION OF JALANDHAR ',
headerStyle: { 'color': 'maroon','font-weight': '1900', 'background-color': 'orange', 'text-shadow': '2px 2px 2px brown','opacity':'1.0', 'border': '3px brown groove'},
