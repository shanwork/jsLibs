title: 'YUDH-KHAND,BATTLE BETWEEN JALANDHAR AND THE DEITIES  ',
headerStyle: { 'color': '#ff0a00','font-weight': '1900', 'background-color': '#ffd700', 'text-shadow': '2px 2px 2px orange','opacity':'1.0', 'border': '3px outset #ff8801'},
contentStyle: { 'border':'3px outset blue',
'background-image': 'url("images/rudraSamhita/yudh_khand5.jpg")',
'background-size': 'contain',
'border-radius':'4px',
