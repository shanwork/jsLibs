                headerStyle: { 'color': '#f5f000','font-weight': '1900', 'background-color': '#ff9933', 'text-shadow':'2px 1px brown','opacity':'0.9'},
                contentStyle: { 'border':'3px outset blue', 'background-image': 'url("images/rudraSamhita/sati_khand11.jpg")','background-size': 'contain',
