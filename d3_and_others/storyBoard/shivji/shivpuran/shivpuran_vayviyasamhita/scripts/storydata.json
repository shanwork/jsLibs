title: ' VAYVIYA-SAMHITA , MEDITATION ',
headerStyle: { 'color': 'yellow','font-weight': '1900', 'background-color': 'crimson', 'opacity':'1.0','padding':'2px' ,'border': '3px  silver outset'},
