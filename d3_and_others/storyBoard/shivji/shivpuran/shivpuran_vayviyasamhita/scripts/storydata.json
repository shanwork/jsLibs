buttonText: '10',
title: ' VAYVIYA-SAMHITA , METHOD OF PERFORMING \'HAWANA\' ',
headerStyle: { 'color': '#cc2200','font-weight': '1900', 'background-color': 'yellow', 'opacity':'1.0','padding':'2px' ,'border': '3px  #cc6600 outset'},
contentStyle: { 'border':'3px outset blue',
