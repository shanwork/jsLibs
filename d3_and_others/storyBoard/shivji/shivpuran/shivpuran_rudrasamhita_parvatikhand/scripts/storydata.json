title: 'KUMARA-KHAND,KILLING OF TARAKASUR  ',
headerStyle: { 'color': 'yellow','font-weight': '1900','text-shadow': '4px 4px 3px white', 'background-color': 'maroon', 'opacity':'1.0', 'border': '2px #ff4400 outset'},
