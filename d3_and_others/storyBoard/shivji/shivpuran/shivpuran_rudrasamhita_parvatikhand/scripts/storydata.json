buttonText: '18',
title: 'KUMARA-KHAND,GANESH ',
headerStyle: { 'color': 'crimson','font-weight': '1900', 'background-color': 'yellow', 'text-shadow': '3px 3px 2px maroon', 'opacity':'1.0', 'border': '2px #ff4400 outset'},
contentStyle: { 'border':'3px outset blue',
'background-image': 'url("images/rudraSamhita/parvati_khand18.jpg")',
