buttonText: '19',
title: 'KUMARA-KHAND,SHIVA SEVERS GANESHA\'S HEAD LATER GIVEN ELEPHANT HEAD  ',
headerStyle: { 'color': 'red','font-weight': '1900', 'background-color': 'orange', 'opacity':'1.0', 'border': '2px #ff4400 outset'},
