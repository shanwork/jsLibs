buttonText: '17',
title: 'KUMARA-KHAND,KILLINGS OF PRALAMB AND BANASUR ',
headerStyle: { 'color': 'black','font-weight': '1900','text-shadow': '4px 4px 3px white', 'background-color': 'red', 'opacity':'1.0', 'border': '2px #ff4400 outset'},
contentStyle: { 'border':'3px outset blue',
