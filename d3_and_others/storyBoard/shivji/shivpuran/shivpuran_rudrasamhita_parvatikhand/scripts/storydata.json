buttonText: '20',
title: 'KUMARA-KHAND,GANESHA\'S MARRIAGE ',
headerStyle: { 'color': '#b22222','font-weight': '900','text-shadow': '3px 3px 2px yellow', 'background-color': '#ff8c00', 'opacity':'1.0', 'border': '2px #ff4400 outset'},
