buttonText: '11',
title: 'PARVATI-KHAND,ANARANYA - THE KING ',
headerStyle: { 'color': 'brown','font-weight': '1900', 'background-color': '#ffaaee', 'opacity':'0.9', 'border': '2px brown inset'},
